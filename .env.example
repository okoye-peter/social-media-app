# Database Configuration (Required)
DATABASE_URL=
DIRECT_URL=

# JWT Configuration (Required)
# Generate a secure secret using: openssl rand -base64 32
JWT_SECRET=
# number of days e.g 1 or 2 or 3 e.t.c
JWT_EXPIRES_IN=

# Google OAuth (Optional - for Google sign-in)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="/api/auth/google/callback"

# GitHub OAuth (Optional - for GitHub sign-in)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI="/api/auth/github/callback"


NEXTAUTH_URL=
NODE_ENV=development

NEXT_PUBLIC_API_BASE_URL=/api

INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=


# Note: For production deployment, update OAuth redirect URIs to your production domain
# Example: https://your-domain.com/api/auth/google/callback

# Supabase Storage (Optional - for file uploads)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
NEXT_PUBLIC_SUPABASE_BUCKET=

# Pusher Configuration (Required for real-time chat)
# Server-side variables (used in API routes)
PUSHER_APP_ID=your_app_id
PUSHER_SECRET=your_secret
# Client-side variables (must have NEXT_PUBLIC_ prefix)
NEXT_PUBLIC_PUSHER_KEY=your_key
NEXT_PUBLIC_PUSHER_CLUSTER=your_cluster